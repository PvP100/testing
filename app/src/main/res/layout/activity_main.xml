<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/okok"
    android:padding="20dp"
    tools:context=".view.MainActivity">

    <ImageView
        android:src="@drawable/icon_music_app"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgIconApp"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/txtvApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgIconApp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Tổng hợp các bài hát miễn phí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="signInClick"
        android:id="@+id/btnSignInScreen"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtvApp"
        android:text="Sign In"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="signUpClick"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSignInScreen"
        android:id="@+id/btnSignUpScreen"
        android:layout_marginLeft="50dp"
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>